<section id="addblog">
  <h1 class="mainh1"  data-aos="flip-left"
  data-aos-easing="ease-out-cubic"
  data-aos-duration="2000">ADD YOUR BLOG HERE</h1>
  <form action="">
    <div class="form-group">
   
    <input type="text" name="" id="" placeholder="Author">
    </div>
    <div class="form-group">
      
    <input type="text" name="" id="" placeholder="Title">
    </div>
    
    <div class="form-group">
      <input type="text" name="" id="" placeholder="image">
    </div>
    
    <div class="form-group">
      <textarea id="message" name="message" required placeholder="Start writing your blog here..." rows="15"></textarea>
  </div>
 
    <div class="formgroup">
      <label for="" class="select">Select Type</label>
      <select class="disp" name="dropdown">
        <option value="ALL posts" selected>All posts</option>
        <option value="Recents">Recents</option>  
      </select>
      <input type="date" name="" id="date">
    </div>
    <div class="form-group" id="submit-btn-wrapper">
      <input type="submit" value="Publish Blog" id="submit-btn">
  </div>
  </form>

</section>
