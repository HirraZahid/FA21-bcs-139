  <script>
    function doBindings() {
        let submitBtn = document.getElementById("submit-btn");
        submitBtn.onclick = handleFormSubmit;
    }
    $(doBindings);

    function handleFormSubmit(event) {
        let nameField = $("#name");
        let emailField = $("#email");
        let messageField = $("#message"); // Selecting the textarea field
        let nameRegex = /^[a-zA-Z\s]+$/;// Regular expression to match only alphabetical characters

        let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; // Regular expression to validate email format

        // Name validation
        if (nameField.val()) {
            if (!nameRegex.test(nameField.val())) {
                console.log("Name should contain only alphabetical characters");
                event.preventDefault();
                nameField.addClass("error");
            } else {
                nameField.removeClass("error");
            }
        } else {
            console.log("Name field is empty");
            event.preventDefault();
            nameField.addClass("error");
        }

        // Email validation
        if (emailField.val()) {
            if (!emailRegex.test(emailField.val())) {
                console.log("Invalid email format");
                event.preventDefault();
                emailField.addClass("error");
            } else {
                emailField.removeClass("error");
            }
        } else {
            console.log("Email field is empty");
            event.preventDefault();
            emailField.addClass("error");
        }

        // Message validation
        if (messageField.val()) {
            // No specific validation for message field is provided here. You can add your specific validation logic.
            messageField.removeClass("error");
        } else {
            console.log("Message field is empty");
            event.preventDefault();
            messageField.addClass("error");
        }
    }
</script>

